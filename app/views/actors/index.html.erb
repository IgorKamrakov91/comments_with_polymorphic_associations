<p id="notice"><%= notice %></p>

<%= link_to 'New Actor', new_actor_path, class: "btn btn-secondary float-xs-right" %>
<h1>Actors</h1>

<table style="width: 100%;" class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= image_tag actor.image.url(:thumb) %></td>
        <td><%= link_to actor.name, actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
