<p id="notice"><%= notice %></p>

<%= link_to 'New Film', new_film_path, class: "btn btn-secondary float-xs-right" %>
<h1>Films</h1>

<table style="width: 100%;" class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= image_tag film.image.url(:thumb) %></td>
        <td><%= link_to film.title, film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
